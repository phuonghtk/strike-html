@import 'framework'
@import 'mixins'

#info

  h3
    ff Freshman
    fs 80px
    text-transform uppercase

  ul
    // fluidgrid(li, 2, 0.08rem, left)
    float-children 'li', right, w = 50%

  li
    margin 0.25rem 0
    padding 0 1.6rem
    // outline 1px dotted red

    &:nth-child(5)

      span

        &:last-child
          width 6rem

    span
      // outline 1px dotted red
      display box
      color green
      display inline-block

      &:last-child
        color red
        float right
        line-height 1.4rem
        width 3rem
        text-align right
        padding-right  0.3rem

.progress
  progress()